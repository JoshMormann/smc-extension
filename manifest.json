{
  "manifest_version": 3,
  "name": "SREF Mining Extension",
  "version": "1.0.0",
  "description": "Seamlessly mine SREF codes from MidJourney and save them to your SREF Manager library",
  
  
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "notifications",
    "identity",
    "tabs"
  ],
  

  "host_permissions": [
    "https://discord.com/*",
    "https://*.discord.com/*",
    "https://midjourney.com/*",
    "https://*.midjourney.com/*",
    "https://accounts.google.com/*",
    "https://oauth2.googleapis.com/*",
    "https://www.googleapis.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://discord.com/*", "https://*.discord.com/*", "https://midjourney.com/*", "https://*.midjourney.com/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "SREF Mining Extension",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "*"],
      "matches": ["https://discord.com/*", "https://*.discord.com/*", "https://midjourney.com/*", "https://*.midjourney.com/*"]
    }
  ]
}
